<html xmlns="http://www.w3.org/1999/xhtml" ng-app="StoreApp">
<head>
    <link rel="shortcut icon" href="/img/favicon.ico" type="image/x-icon">
    <link rel="icon" href="img/favicon.ico" type="image/x-icon">
    <title>eStore</title>
    <base href="/" />
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel='stylesheet' type='text/css'>
    <link href="~/Content/ui-bootstrap-csp.css" rel="stylesheet" />
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
    <link href='http://fonts.googleapis.com/css?family=Oswald:400,300' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Roboto+Condensed:300italic,400italic,700italic,400,300,700' rel='stylesheet' type='text/css'>   
    <link href="~/Content/bootswatchTheme.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
</head>
<body ng-controller="HomeController as homeC">
    
    <!-- Navigation bar -->
    <nav class="navbar navbar-inverse navbar-static-top" ng-controller="MenuController as menu" ng-cloak>
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-2">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div style="display: inline-block">
                    <a class="navbar-brand" href="~/">
                        <i class="fa fa-pagelines fa-flip-horizontal fa-2x"></i> @*&nbsp; <img src="~/img/SNPCGabriolaShadow.png" />*@
                    </a>
                </div>
            </div>

            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-2">
                <ul class="nav navbar-nav">
                    <li><a href="~/list">Products</a></li>
                    <li><a href="~/list">Other</a></li>
                </ul>

                <!-- Dropdown Menus -->
                <div class="btn-group " dropdown>
                    <button type="button" class="btn btn-info dropdown-toggle mjr-navbarDropdown" dropdown-toggle>
                        Links &nbsp; <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" role="menu">
                        <li><a href="/list">Products</a></li>
                        <li><a href="#">Link</a></li>
                        <li><a href="#">Link</a></li>
                        <li class="divider"></li>
                        <li><a href="#">Contact Us</a></li>
                    </ul>
                </div>

                <div class="btn-group" dropdown>
                    <button ng-show="menu.isAdmin()" type="button" class="btn btn-info dropdown-toggle mjr-navbarDropdown" dropdown-toggle>
                        Admin &nbsp; <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" role="menu">
                        <li ng-show="menu.isAdmin()"><a href="~/add">Add Product</a></li>
                        <li ng-show="menu.isAdmin()"><a href="#">Link</a></li>
                        <li ng-show="menu.isAdmin()"><a href="#">Link</a></li>
                        <li class="divider"></li>
                        <li><a href="#">Users</a></li>
                    </ul>
                </div>



                <!-- Login/Register/Admin links -->
                <ul class="nav navbar-nav navbar-right">
                    <li ng-if="!menu.showLogin()"><a href="~/register">Register</a></li>
                    <li ng-if="!menu.showLogin()"><a ng-click="homeC.loginshowLoginModal()">Login</a></li>
                    <li ng-if="menu.showLogin()"><a ng-click="menu.logout()">Log out</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Partial Views Inserted Here -->
    <div class="container-fluid" ng-view="view"></div>
